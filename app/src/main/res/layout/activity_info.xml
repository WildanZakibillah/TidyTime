<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="20dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About TidyTime"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="8dp" />

        <!-- Brief Introduction Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TidyTime is a task management app designed to help you stay organized and improve your productivity. Whether you need to manage daily tasks, set reminders, or track progress on ongoing projects, TidyTime makes it easy and efficient."
            android:textSize="16sp"
            android:textColor="#333"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <!-- Features Explanation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TidyTime offers several key features to help you stay on top of your tasks and goals. With its user-friendly interface, you can:"
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Manage and organize daily tasks with ease."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Set customizable reminders to never miss important tasks."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Track progress on ongoing projects and mark tasks as completed."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- In-depth Explanation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The app allows you to categorize tasks into different projects, making it easy to manage both personal and professional commitments. You can prioritize tasks by urgency, set deadlines, and organize them according to specific categories. TidyTime ensures you can always stay on top of what’s important, reducing stress and increasing productivity."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Whether you're a student managing study schedules, a professional juggling work assignments, or someone simply trying to stay organized in daily life, TidyTime offers a comprehensive solution. It adapts to your specific needs and allows you to create a tailored task management system that works for you."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Benefits Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some of the major benefits of using TidyTime include:"
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Improved focus by organizing tasks and setting clear priorities."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Reduced anxiety by keeping track of your tasks and avoiding last-minute rushes."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• Increased productivity by breaking down larger tasks into manageable steps."
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Future Improvements & Updates -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TidyTime is constantly evolving. Our team is dedicated to bringing you new features and improvements that make task management even easier. Future updates will include advanced analytics, deeper task categorization, integration with other productivity tools, and much more!"
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

        <!-- Closing Remarks -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for choosing TidyTime to help you manage your tasks and enhance your productivity. We hope that TidyTime becomes an indispensable tool in your everyday life. Don’t hesitate to reach out to our support team if you have any questions or feedback!"
            android:textSize="14sp"
            android:textColor="#666"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
